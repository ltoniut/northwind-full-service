{
  "name": "@rest/northwind-full-service",
  "version": "0.0.1",
  "description": "Full Northwind",
  "author": "User.io",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "format": "prettier --write 'src/**/*.ts' 'src/**/*.tss' 'tests/**/*.ts' 'tests/**/*.tsx'",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint:fix": "eslint --fix \"src/**/*.ts\" \"tests/**/*.ts\"",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start -w",
    "start:prod": "node dist/src/main",
    "start:redis": "docker-compose up -d redis",
    "start:mssql": "docker-compose up -d sqlserver",
    "test": "jest --maxWorkers=4 --silent",
    "test:silent": "jest --silent",
    "test:simple": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:cov": "jest --maxWorkers=4 --silent --coverage",
    "test:cov:dev": "jest --maxWorkers=4 --silent --coverage && open ./coverage/lcov-report/index.html",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./tests/jest-e2e.json --detectOpenHandles",
    "code-validation": "sonar-scanner",
    "migrate:run": "npm run typeorm migration:run -- -f src/migrationConfig.ts -t=each",
    "migrate:generate": "npm run typeorm migration:generate -- -f src/migrationConfig.ts -n",
    "migrate:create": "npm run typeorm migration:create -- -f src/migrationConfig.ts -n",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js"
  },
  "dependencies": {
    "@linos/backend-auth-module": "0.0.5",
    "@linos/message-bus-sdk": "0.0.4",
    "@nestjs/common": "^7.0.7",
    "@nestjs/config": "^0.4.2",
    "@nestjs/core": "^7.0.0",
    "@nestjs/cqrs": "^6.1.0",
    "@nestjs/jwt": "^7.0.0",
    "@nestjs/passport": "^7.0.0",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/swagger": "^4.6.0",
    "@nestjs/testing": "^7.0.0",
    "@nestjs/typeorm": "^7.0.0",
    "cache-manager": "^3.3.0",
    "cache-manager-redis-store": "^2.0.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "dotenv": "^8.2.0",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^1.8.0",
    "northwind-rest-commons": "../northwind-rest-commons",
    "moment": "^2.27.0",
    "mssql": "^6.2.0",
    "mysql": "2.18.1",
    "nestjs-i18n": "^8.0.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "swagger-ui-express": "^4.1.4",
    "typeorm": "^0.2.30",
    "typeorm-model-generator": "^0.4.4",
    "typescript-collections": "^1.3.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@types/express": "^4.17.3",
    "@types/jest": "^24.9.1",
    "@types/node": "^13.9.1",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/redis": "^2.8.18",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-sonarjs": "^0.5.0",
    "husky": "^4.2.5",
    "jest": "^26.6.3",
    "lint-staged": "^10.2.6",
    "mockdate": "^3.0.2",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^26.4.4",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix",
      "npm run format"
    ]
  }
}
